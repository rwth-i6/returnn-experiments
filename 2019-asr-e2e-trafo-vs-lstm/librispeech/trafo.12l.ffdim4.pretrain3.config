Dim = 512
TrafoDefaultKwargs = dict(
    encN=FinalNumLayers, decN=FinalNumLayers,
    lstm_dim=Dim * 2, FFDim=Dim * 4, EncKeyTotalDim=Dim, EncValueTotalDim=Dim, AttNumHeads=8,
