#!returnn/rnn.py

task = "train"
device = "cpu"  #set gpu or cpu
multiprocessing = True
update_on_device = True

num_inputs = 784
num_outputs = 10

network = {
"ff0" : { "class" : "forward", "n_out" : 2000, "activation" : "relu" },

"ff1" : { "class" : "forward", "n_out" : 2000, "activation" : "relu", "from" : ["ff0"] },

"ff2" : { "class" : "forward", "n_out" : 2000, "activation" : "relu", "from" : ["ff1"] },

"out" : { "class" : "softmax", "loss" : "ce", "from" : ["ff2"] }
}

train = "mnist-hdf/mnist.train.h5"
